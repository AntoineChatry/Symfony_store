{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}My Shop{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
              integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
              crossorigin="anonymous">
    {% endblock %}
</head>
<body>
{% block header %}
    <nav class="navbar navbar-dark bg-dark sticky-top">
        <a href="{{ path('home') }}" class="navbar-brand">
            My Shop
        </a>
        <div class="navbar-nav">
            <a href="{{ path('user') }}" class="btn btn-dark ">Mes produits</a>
        </div>
        <div class="navbar-nav">
            <a href="{{ path('addProducts') }}" class="btn btn-dark ">Ajouter un produit</a>
        </div>
        <div class="navbar-nav">
        <a href="{{ path('app_logout') }}" class="btn btn-dark">
            DÃ©connexion
        </a>
        </div>
        {% if app.user == null %}
        <div class="navbar-nav">
            <a href="{{ path('login') }}" class="btn btn-primary ">Connexion</a>
        </div>
        <div class="navbar-nav">
            <a href="{{ path('app_register') }}" class="btn btn-secondary ">Inscription</a>
        </div>
        {% endif %}
        <div class="navbar-nav">
            <a href="{{ path('cart') }}" class="btn btn-light">
                Panier
            </a>
        </div>
    </nav>
{% endblock %}

{% block body %}{% endblock %}
</body>
</html>
