{% extends 'base.html.twig' %}

{% block title %}Modifier un produit{% endblock %}

{% block body %}

    <h1>Modifier un produit</h1>

{% if(app.user == null) %}
    <div class="alert alert-primary d-flex flex-column mt-4" role="alert">
        <p class="lh-1">Vous devez être connecté pour modifier un produit<p>
        <a href="{{ path('login') }}">Go login!</a>                
    </div>
{% else %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
               {{ form_start(editForm) }}
               {{ form_widget(editForm) }}
               <button class="btn btn-primary mt-3" type="submit">Add</button>
               {{ form_end(editForm) }}
            </div>
        </div>
    </div>
{% endif %}

{% endblock %}
