{% extends 'base.html.twig' %}

{% block title %}Add Products{% endblock %}

{% block body %}

    <h1>Add Products</h1>

{% if(app.user == null) %}
    <div class="alert alert-primary d-flex flex-column mt-4" role="alert">
        <p class="lh-1">You must be logged for add a product <p>
        <a href="{{ path('login') }}">Go login!</a>                
    </div>
{% else %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
               {{ form_start(addForm) }}
               {{ form_widget(addForm) }}
               <button class="btn btn-primary mt-3" type="submit">Add</button>
               {{ form_end(addForm) }}
            </div>
        </div>
    </div>
{% endif %}

{% endblock %}
